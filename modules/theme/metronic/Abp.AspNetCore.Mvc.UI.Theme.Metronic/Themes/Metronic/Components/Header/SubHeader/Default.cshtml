@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Volo.Abp.Ui.Branding;
@using Abp.AspNetCore.Mvc.UI.Theme.Metronic.Themes.Metronic.Components.BreadCrumb

@inject IBrandingProvider BrandingProvider
@inject IPageLayout PageLayout

@{ var pageTitle = ViewBag.Title == null ? BrandingProvider.AppName : ViewBag.Title; }
<div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">
            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-1 mr-5">@(PageLayout.Content.Title??pageTitle)</h5>
                <!--end::Page Title-->
                <!--begin::Breadcrumb-->
                @(await Component.InvokeAsync<MainSubHeaderBreadCrumbViewComponent>())
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->
    </div>
</div>