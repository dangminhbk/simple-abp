@page
@using Simple.Abp.Dict.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Simple.Abp.Dict.Web.Pages.Dict.Simple.Abp.Dict.CatalogWordMapping
@using Simple.Abp.Dict.Localization
@using Simple.Abp.Dict.Web.Menus
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<DictResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["CatalogWordMapping"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:CatalogWordMapping"].Value);
    PageLayout.Content.MenuItemName = DictMenus.CatalogWordMapping;
}

@section scripts
{
    <abp-script src="/Pages/Dict/Simple/Abp/Dict/CatalogWordMapping/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Dict/Simple/Abp/Dict/CatalogWordMapping/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["CatalogWordMapping"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
			    @if (await Authorization.IsGrantedAsync(DictPermissions.CatalogWordMapping.Create))
                {
                <abp-button id="NewCatalogWordMappingButton"
                            text="@L["CreateCatalogWordMapping"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CatalogWordMappingTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["CatalogWordMappingCatalogId"]</th>
                <th>@L["CatalogWordMappingWordId"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>