@using Simple.Abp.Articles.Web.Front
@inject FrontHelper FrontHelper
<header id="header">
    <a href="/">
        <div id="logo" style="background-image: url(/logo.png);"></div>
    </a>
    <div id="title">
        <h1>
            @ViewBag.PageTitle
            <span style="font-size:11px" id="theme-switch">
                <i class="fa fa-toggle-@(FrontHelper.IsThemeNight()?"on":"off")"></i>
            </span>
        </h1>
    </div>


    <div id="nav">
        <ul>
            <li class="icon">
                <a href="javascript:void(0)"><i class="fas fa-bars fa-2x"></i></a>
            </li>
            @await Html.PartialAsync("/Shared/_NavItems.cshtml")
        </ul>
    </div>
   
</header>